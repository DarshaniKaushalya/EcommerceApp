<!--form handling-->
<form action="/products" method="POST" id="addProduct">
    <div class="new_user form-style-6">
        <h1>Add New Product</h1>
        <div class="form-group">
            <label for="name" class="text-light">Product Name</label>
            <input type="hidden" name="id" value="" required>
            <input class="form-control" type="text" name="name" value="" placeholder="Product Name" required>
        </div>

        <div class="form-group">
            <label for="Price" class="text-light">Price</label>
            <input class="form-control" type="text" name="price" value="" placeholder="Price" required>
        </div>

        <div class="form-group">
            <label for="ProductImage" class="text-light">Product Image</label>
            <input class="form-control" type="file" name="image" value="" placeholder="Image" required>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Add Product</button>
        </div>
    </div>

</form>